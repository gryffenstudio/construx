---
import Icon from './Icon.astro';

interface Props {
    title: string;
    description: string;
    icon: string;
}

const { title, description, icon } = Astro.props;
---

<div>
    <div class='flex space-x-2'>
        <Icon icon={icon} />
        <h3 class='text-xl font-bold leading-[45px]'>{title}</h3>
    </div>
    <p class='leading-[25px]'>{description}</p>
</div>
